{
  "name": "AsakuraWiki",
  "version": "2.0.60",
  "main": "main/.Scripts/index.js",
  "description": "",
  "author": {
    "name": "13ninstudio, Inc",
    "url": "https://github.com/sakitibi/AsakuraWiki"
  },
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"next dev\" \"electron .\"",
    "build": "next build && tsc -p tsconfig.json",
    "start": "npm run start",
    "postbuild": "next-sitemap"
  },
  "dependencies": {
    "@opennextjs/cloudflare": "^1.6.5",
    "@supabase/auth-helpers-nextjs": "^0.15.0",
    "@supabase/auth-helpers-react": "^0.5.0",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.55.0",
    "dotenv": "^17.2.1",
    "electron-updater": "^6.6.2",
    "express": "^5.1.0",
    "jose": "^6.1.0",
    "mathjs": "^14.6.0",
    "next": "^16.0.7",
    "pako": "^2.1.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "undici": "^7.16.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "@types/pako": "^2.0.4",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "concurrently": "^8.2.0",
    "electron": "^39.2.1",
    "electron-builder": "^26.0.11",
    "next-sitemap": "^4.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "build": {
    "appId": "com.13ninstudio.asakurawiki",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": "universal"
        }
      ],
      "protocols": [
        {
          "name": "asakurawiki Protocol",
          "schemes": [
            "AsakuraWiki"
          ]
        }
      ],
      "icon": "build/icon.icns"
    },
    "dmg": {
      "title": "AsakuraWiki",
      "icon": "build/icon.icns",
      "iconSize": 128,
      "contents": [
        {
          "x": 130,
          "y": 220,
          "type": "file"
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "asarUnpack": [
      "node_modules/express/**",
      "node_modules/qs/**",
      "node_modules/side-channel/**"
    ],
    "extraResources": [
      {
        "from": ".next/standalone",
        "to": "standalone",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": ".next/static",
        "to": "standalone/.next/static",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "public",
        "to": "standalone/public",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
